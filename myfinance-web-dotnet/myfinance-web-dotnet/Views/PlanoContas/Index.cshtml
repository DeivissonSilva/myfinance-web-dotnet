@model IEnumerable<PlanoContaModel>

<style type="text/css">
    .descricao {
        text-align:left;
    }
</style>  

<h2 style="text-align: center;">
    Plano de Contas
</h2>
<a asp-action="Create" class="btn btn-primary">Novo Plano Conta</a>
<table class="table" style="text-align: center;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Ativo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var _planoConta in Model)
        {
            <tr>
                <td>@_planoConta.Id</td>
                <td class="descricao">@_planoConta.Descricao</td>
                <td>@_planoConta.Tipo </td>
                <td>@(_planoConta.Ativo ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@_planoConta.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@_planoConta.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>